.lp-feature {
	&:nth-of-type(2){
		.featured-card__header {
			border: 1px solid #ebebeb;
			border-width: 0 1px 0 1px;
		}
		.lp-card {
			border: 1px solid #fff;
			border-width: 0 1px 0 1px;
		}
	}
  .featured-card {
  }
  .featured-card__header {
  	background-color: #fff;
  	padding-bottom: 30px;
  	text-align: center;
  	.h1.featured-card__title {
  		color: #146db5;
      font-size: 16px;
      text-transform: initial;
  		@include max(1000px) {	
         font-size: 16px;
          letter-spacing: 0.05em;
        }
    
    }
    
    
  }
  .lp-card {
  	position: relative;
  	background-size: cover;
  	background-position: center;
  	min-height: 400px;
  	@include at-least(900px) {
  		min-height: 0;
	  	height: 0;
	  	padding-bottom: 80%;
  	}
  	cursor: pointer;
  	&:after {
  		content: '';
  		position: absolute;
  		top: 0;
  		left: 0;
  		width: 100%;
  		height: 100%;
  		background-color: rgba(black, .5);
  		z-index: 1;
  		visibility: hidden;
  		opacity: 0;
  		transition: all .3s ease;
  	}
  	&:hover {
  		&:after {
  			visibility: visible;
  			opacity: 1;
  		}
  		.lp-card-content {
  			opacity: 1;
  			visibility: visible;
  		}
  	}
  }
  .lp-card-content {
		padding: 20px 30px 20px 50px;
		position: absolute;
		top: 50%;
		width: 100%;
		opacity: 0;
		visibility: hidden;
		transition: all .3s ease;
		z-index: 2;
		left: 50%;
		transform: translate(-50%, -50%);
		h3 {
			color: #fff;
			font-size: 18px;
		}
		ul {
			list-style: none;
			font-size: 0;
			li {
				display: inline-block;
              	@include max(900px) {
                 display: block; 
                }
				font-size: 14px;
				width: 50%;
				a {
					color: #fff;
                  	
				}
              a:hover {
                      text-decoration: underline;
                    }
              
			}
		}
	}
}
 

