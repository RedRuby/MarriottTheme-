$blue: #146db5;

@mixin at-least($breakpoint) {
    @media screen and (min-width: $breakpoint) {
        @content;
    }
}

@mixin at-least-height($breakpoint) {
    @media screen and (min-height: $breakpoint) {
        @content;
    }
}

@mixin max($pixels) {
    @media screen and (max-width: $pixels) { @content; }
