<!-- /snippets/featured-products.liquid -->

{% if settings.products_featured_collection != blank %}
  {% if collections[settings.products_featured_collection].products_count != 0 %}
    <div class="content-block">
      <h6 class="content-block__title">{{ 'layout.sidebar.featured_products' | t }}</h6>
      <div class="content-block__no-padding content-block__no-padding--border-top">
        {% for product in collections[settings.products_featured_collection].products limit: 2 %}
          {%- comment %}<locksmith:dcd8>{% endcomment -%}
            {%- include 'locksmith-variables', locksmith_scope: 'subject', locksmith_subject: product, locksmith_subject_parent: collections[settings.products_featured_collection] %}{% if locksmith_transparent %}{% else %}{% continue %}{% endif -%}
          {%- comment %}</locksmith:dcd8>{% endcomment -%}
          {% include 'product-card', product: product %}
        {% endfor %}
      </div>
    </div>
  {% endif %}
{% endif %}
